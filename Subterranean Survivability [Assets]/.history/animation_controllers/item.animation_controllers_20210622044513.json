                        },
                        {
                            "hold": "q.equipped_item_any_tag('slot.weapon.mainhand', 'pistol') && !v.is_first_person && !q.item_remaining_use_duration > 0.0"
                        }
                    ]
                }
            }
        },
        "controller.animation.item.pistol_first_person": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        {
                            "hold": "q.equipped_item_any_tag('slot.weapon.mainhand', 'pistol') && v.is_first_person"
                        }
                    ]
                },
                "hold": {
                    "animations": [
                        "pistol_hold_first_person"
                    ],
                    "transitions": [
                        {
                            "default": "!q.equipped_item_any_tag('slot.weapon.mainhand', 'pistol') && v.is_first_person"
                        }
                    ]
                }
            }
