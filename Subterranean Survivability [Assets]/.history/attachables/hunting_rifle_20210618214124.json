			},
			"textures": {
				"default": "textures/models/misc/hunting_rifle",
				"enchanted": "textures/misc/enchanted_item_glint"
			},
			"geometry": {
				"default": "geometry.hunting_rifle"
			},
			"animations": {
				"shoot": "animation.hunting_rifle.shoot"
			},
			"scripts": {
				"parent_setup": "variable.chest_layer_visible = 0.0;",
